<div class="edit-form">
  <h3 class="editor-close" data-action="click->toggler#toggle" data-target="editBeerForm"> x </h3>
  <%= simple_form_for [beer], html: { multipart: true } do |f| %>
    <%= f.input :name %>
    <%= f.input :style %>
    <%= f.input :brewery %>
    <%= f.input :origin,
                input_html: {data: {address_autocomplete_target: "origin"}, class: "d-none"},
                wrapper_html: {data: {controller: "address-autocomplete", address_autocomplete_api_key_value: ENV['MAPBOX_API_KEY']}}
                %>
    <%= f.input :photo,
                as: :file,
                required: false,
                input_html: { accept: "image/*" } %>
    <%= f.submit "Add beer" %>
  <% end %>
</div>
