<%# Conditional guard against null to prevent errors. Can remove once all the kinks worked out %>
<% if player_answer %>
  <%# shuffling array ofIterating across all player_answers  %>
  <% player_answer.each do |answer| %>
    <%= simple_form_for [@game, player, answer], html: { multipart: true } do |f| %>
      <%= f.input :answer, collection: @round_beers , label_method: :code, value_method: :code, label: answer.beer.name %>
    <% end %>
  <% end %>
<% else %>
  <p> Answering not possible! The data is incomplete. </p>
<% end %>
